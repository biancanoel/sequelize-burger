

<div class="row">
    <div class="col-md-6 col-md-offset-3 create-new">
        <h1>Create a new burger</h1>
        <form class="form-inline">
            <div class="form-group">

                <input type="text" class="form-control" id="name" placeholder="Burger Name">
                <input type="text" class="form-control" id="price" placeholder="Price of Burger">
            </div>
            <div class="form-group">
                <label for="devoured">Devoured already?</label>
                <br>
                <input type="radio" name="devoured" value="1" checked> Devoured it!
                <br>
                <input type="radio" name="devoured" value="0"> Not yet!
            </div>
            <br><br>
            <button type="submit" class="btn btn-default" id="add"> Add burger!</button>
        </form>

    </div>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-2 burger-boxes">
        <h2>Burgers not eaten</h2>
        <ul class="burger-not-eaten">
            {{#each burgers}} {{#unless devoured}} {{> burgers/burgers-block devoured=false}} {{/unless}} {{/each}}
        </ul>
    </div>



    <div class="col-md-4 burger-boxes">
        <h2>Burgers already eaten</h2>
        <ul class="burgers-eaten">
            {{#each burgers}} {{#if devoured}} {{> burgers/burgers-block devoured=true}} {{/if}} {{/each}}
        </ul>
    </div>
</div>